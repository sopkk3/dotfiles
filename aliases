# General
alias mkdir='mkdir -p'
alias chown='chown -Rv'
alias chmod='chmod -Rv'
alias grep='grep --color=always'
alias cd..='cd ..'
alias python='python3'
alias pip='pip3'
alias vim='nvim'
alias kc='kubectl'
alias kx='kubectx'
alias tf='terraform'
alias nctl='nerdctl'
alias helm='helm 2>/dev/null'

# Git
alias gaa='git add -A'
alias gcmsg='git commit -m '
alias gp='git push'
alias gss='git status -s'
alias gd='git diff'
alias gsw='git switch -; git pull'
alias gl='git pull'
alias grp='git remote prune origin'
