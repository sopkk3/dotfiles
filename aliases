# Universal Shell Aliases
alias mkdir='mkdir -p'
alias chown='chown -Rv'
alias chmod='chmod -Rv'
alias grep='grep --color=always'

# Personal aliases
alias dirs='dirs -v'
alias cl='clear'
alias cd..='cd ..'
alias python='python3'
alias pip='pip3'
alias vim='nvim'
alias kc='kubectl'

# Git
alias gaa='git add -A'
alias gcmsg='git commit -m '
alias gp='git push'
alias gss='git status -s'
alias gd='git diff'
